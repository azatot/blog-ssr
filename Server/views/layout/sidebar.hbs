<aside class="sidebar">
    <div class="box auth">

        <form method="POST" class="login">
            <h2>Enter</h2>
            <p>{{error.message}}</p>

            <div class="form-group">
                <label for="log-login">Name:</label>
                <input type="text" name="login" id="log-login">
            </div>
            <div class="form-group">
                <label for="log-password">Password:</label>
                <input type="password" name="password" id="log-password">
            </div>
            <div class="buttons">
                <button id="submit-login" type="submit" class="login-button">Login</button>
                <button class="switch-button secondary-inverse">To Register</button>
            </div>
        </form>


        <form method="POST" class="register">
            <h2>Register</h2>
            <div>
                <p>{{error.message}}</p>
            </div>
            <div class="form-group">
                <label for="reg-login">Name:</label>
                <input type="text" name="login" id="reg-login">
            </div>
            <div class="form-group">
                <label for="reg-password">Password:</label>
                <input type="password" name="password" id="reg-password">
            </div>
            <div class="form-group">
                <label for="pass-repeat">Repeat your password:</label>
                <input type="password" name="password-repeat" id="pass-repeat">
            </div>
            <div class="buttons buttons-reg">
                <button id="submit-register" type="submit" class="create-button">Create</button>
                <button class="switch-button reg-button secondary-inverse">To Login</button>
            </div>
        </form>

        {{!-- Error message --}}



    </div>
    <div class="box">box2</div>
</aside>
