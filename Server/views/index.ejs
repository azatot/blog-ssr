<%- include('layout/header.ejs'); -%>
<main class="main">
    <div class="container">
        <div class="content">
            <% if(renderPostsPage) { %> 
                <% postData.forEach((post) =>{ %>
                <div class="post">
                    <div class="top">
                        <h2>
                            <a href=<%=post.url%>> <%= post.title %> </a>
                        </h2>
                    </div>
                    <div class="body">
                        <%= post.body %> 
                    </div>
                    <div class="bottom">
                        <div class="author">
                            Author:
                            <% if (post.author) { %>
                                <a href="/">
                                    <%= post.author %>  
                                </a>
                            <% } else { %> 
                            Anonymous
                            <% } %>

                        </div>
                        <div class="comments">
                            <a href="">Comments</a>
                        </div>
                    </div>
                </div>
            <% }) %>
            <% } else { %>
             
                <%- include('..post/add.ejs'); -%>
            <% } %>
        </div>
        <%- include ('layout/sidebar.ejs'); -%>
    </div>
</main>

  <%- include ('layout/footer.ejs'); -%>